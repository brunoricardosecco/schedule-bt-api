{
  "name": "agenda-beach",
  "version": "1.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "start:dev": "npx nodemon",
    "debug": "npm run migrate:build && nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json && npm run copy-files",
    "docker:up": "npm run build && docker-compose up -d",
    "docker:down": "docker-compose down",
    "copy-files": "copyfiles -u 1 src/**/*.prisma src/**/*.sql dist/",
    "test": "dotenv -e .env.test -- npm run migrate:dev && jest --passWithNoTests --noStackTrace --runInBand -i",
    "test:verbose": "dotenv -e .env.test -- jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm run docker:up && npm run migrate:dev && npm test -- --watch -c jest-integration-config.js",
    "test:staged": "dotenv -e .env.test npm test -- --findRelatedTests",
    "test:ci": "dotenv -e .env.test -- npm test -- --coverage",
    "migrate:reset": "npx prisma migrate reset --schema=src/infra/db/orm/prisma/schema.prisma",
    "migrate:build": "npx prisma migrate dev --schema=dist/infra/db/orm/prisma/schema.prisma",
    "migrate:dev": "npx prisma migrate dev --schema=src/infra/db/orm/prisma/schema.prisma",
    "generate": "npx prisma generate --schema=src/infra/db/orm/prisma/schema.prisma",
    "studio:dev": "npx prisma studio dev",
    "tsc:watch": "npx tsc -w",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "lint": "eslint \"**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "pg": "^8.9.0",
    "prisma": "^4.11.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@shelf/jest-postgres": "^1.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prisma-dbml-generator": "^0.10.0",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "prisma": {
    "schema": "./src/infra/db/orm/prisma/schema.prisma",
    "seed": "ts-node ./src/infra/db/orm/prisma/seed/seed.ts"
  },
  "engines": {
    "node": "18.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
